{
  "extends": "tsconfig.json",
  "include": ["scripts/*.ts"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "~/*": ["./webapp/app/*", "./webapp/*", "./*"]
    }
  }
}
