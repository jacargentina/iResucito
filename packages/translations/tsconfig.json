{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "outDir": "dist",
    "composite": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "langs/**.json"
  ],
  "ui": {
    "network_unavailable": ""
  }
}