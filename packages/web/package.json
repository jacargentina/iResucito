{
  "name": "@iresucito/web",
  "version": "1.0.0",
  "private": true,
  "description": "iResucito webapp",
  "license": "MIT",
  "scripts": {
    "asset-theme-font": "mkdir -p ./public/build/_assets/themes/default/assets/fonts && cp ./node_modules/semantic-ui-css/themes/default/assets/fonts/* ./public/build/_assets/themes/default/assets/fonts",
    "asset-songs-font": "cp -r ./node_modules/@iresucito/core/assets/fonts/* ./public/build/_assets",
    "asset-songs-data": "cp -r ./node_modules/@iresucito/core/assets/songs ./public",
    "assets": "yarn run asset-theme-font && yarn run asset-songs-font && yarn run asset-songs-data",
    "build": "remix setup node && remix build && yarn run assets",
    "ts": "yarn tsc --noEmit",
    "dev": "yarn run assets && remix dev",
    "debug": "yarn run assets && node --inspect ./node_modules/.bin/remix dev",
    "postinstall": "cp ../../node_modules/pdfjs-dist/build/pdf.worker.js ./public && cp ../native/ios/iResucito/Info.plist ./public && cp ../native/android/app/build.gradle ./public"
  },
  "workspaces": {
    "nohoist": [
      "@iresucito/**",
      "@iresucito/**/**",
      "@remix-run/**",
      "@remix-run/**/**",
      "@vercel/remix",
      "@vercel/remix/**",
      "remix",
      "remix/**",
      "remix-auth",
      "remix-auth/**",
      "remix-auth-form",
      "remix-auth-form/**",
      "semantic-ui-css"
    ]
  },
  "dependencies": {
    "@iresucito/core": "*",
    "@iresucito/translations": "*",
    "@remix-run/dev": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "@remix-run/vercel": "^1.15.0",
    "@types/diff": "^5.0.3",
    "@types/etag": "^1.8.1",
    "@types/react": "^18.0.33",
    "@types/react-json-editor-ajrm": "^2.5.3",
    "@vercel/node": "^2.10.2",
    "@vercel/remix": "^1.15.0",
    "base64-stream": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "crypto-random-string": "^5.0.0",
    "deepmerge": "^4.3.1",
    "diff": "^5.1.0",
    "dropbox": "^10.34.0",
    "etag": "^1.8.1",
    "gmail-send": "^1.8.14",
    "lowdb": "^5.1.0",
    "node-fetch": "^3.3.1",
    "pdfjs-dist": "^3.5.141",
    "plist": "^3.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-json-editor-ajrm": "^2.5.14",
    "remix": "^1.15.0",
    "remix-auth": "^3.4.0",
    "remix-auth-form": "^1.3.0",
    "semantic-ui-css": "^2.5.0",
    "semantic-ui-react": "^2.1.4",
    "typescript": "^5.0.3",
    "use-debounce": "^9.0.3",
    "use-hotkeys": "^1.1.0",
    "vercel": "^28.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/react-dom": "^18.0.11"
  }
}
