{
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./app/*"]
    },
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "strict": true,
    "target": "ES2019",
    "isolatedModules": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../core"
    }
  ],
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"]
}
