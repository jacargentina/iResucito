{
  "private": true,
  "packageManager": "yarn",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@gluestack-ui/config"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "upd": "turbo run upd",
    "dev": "turbo run dev",
    "ts": "turbo run ts",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "web": "yarn build && cd packages/web && yarn dev"
  },
  "dependencies": {
    "react-native-cli": "^2.0.1",
    "turbo": "^1.10.14"
  }
}
