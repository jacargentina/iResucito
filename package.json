{
  "private": true,
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": [
      "**/react", 
      "**/react-dom",   
      "**/react-native",
      "**/react-native/**",
      "**/react-native-**",
      "**/react-native-**/**",
      "**/@react-native-community",
      "**/@react-native-community/**",
      "**/@react-native-async-storage",
      "**/@react-native-async-storage/**",
      "**/@react-navigation",
      "**/@react-navigation/**",
      "**/@remix-run",
      "**/@remix-run/**"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock",
    "web": "yarn build && cd packages/web && yarn dev"
  },
  "devDependencies": {
    "turbo": "^1.4.6"
  }
}
